{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "inlineSources": true,
    "strictNullChecks": false,
    "declaration": true,
    "stripInternal": true,
    "baseUrl": "./module",
    "rootDir": "module",
    "outDir": "dist",
    "lib": [
      "dom",
      "es6"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "examples",
    "node_modules",
    "dist",
    "scripts",
    "config",
    "tests",
    "module/aot"
  ],
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  },
  "angularCompilerOptions": {
    "genDir": "module/aot",
    "skipMetadataEmit": false
  }
}
